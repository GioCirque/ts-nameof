{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": false,
        "sourceMap": true,
        "strict": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "typeRoots": [ "node_modules/@types/" ],
        "types": [ "node", "mocha" ],
        "lib": [ "es2015" ],
        "rootDir": "./src",
        "outDir": "./dist"
    },
    "compileOnSave": false
}
